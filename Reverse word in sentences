#include <stdio.h>
#include <string.h>

// Function to reverse part of a string
void reverse(char str[], int start, int end) {
    char temp;
    while (start < end) {
        temp = str[start];
        str[start] = str[end];
        str[end] = temp;
        start++;
        end--;
    }
}

int main() {
    char str[200];
    int i, start = 0, len;

    printf("Enter a sentence: ");
    gets(str);   // (unsafe but simple for beginners)

    len = strlen(str);

    // Step 1: reverse the whole string
    reverse(str, 0, len - 1);

    // Step 2: reverse each word
    for (i = 0; i <= len; i++) {
        if (str[i] == ' ' || str[i] == '\0') {
            reverse(str, start, i - 1);
            start = i + 1;
        }
    }

    printf("Reversed sentence: %s\n", str);

    return 0;
}
