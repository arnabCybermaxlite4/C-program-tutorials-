#include <stdio.h>
#include <string.h>

int main() {
    char str[200];
    int i, j, len;
    char temp;

    printf("Enter a string: ");
    gets(str);   // (unsafe, but simple for beginners)

    len = strlen(str);

    // Bubble Sort
    for (i = 0; i < len - 1; i++) {
        for (j = i + 1; j < len; j++) {
            if (str[i] > str[j]) {
                temp = str[i];
                str[i] = str[j];
                str[j] = temp;
            }
        }
    }

    printf("String in alphabetical order: %s\n", str);

    return 0;
}
