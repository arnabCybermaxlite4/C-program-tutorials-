#include <stdio.h>
#include <string.h>
#include <ctype.h>

// Function to reverse a word in place
void reverseWord(char *word) {
    int i = 0, j = strlen(word) - 1;
    char temp;
    while (i < j) {
        temp = word[i];
        word[i] = word[j];
        word[j] = temp;
        i++;
        j--;
    }
}

int main() {
    char str[200], word[50];
    int i, j = 0, wordCount = 0;

    printf("Enter a sentence: ");
    gets(str);   // (unsafe but simple for beginners)

    printf("Output: ");
    for (i = 0; i <= strlen(str); i++) {
        if (str[i] != ' ' && str[i] != '\0') {
            word[j++] = str[i]; // build word
        } else {
            word[j] = '\0'; // end of word
            wordCount++;

            // Reverse alternate words (even position)
            if (wordCount % 2 == 0) {
                reverseWord(word);
            }

            printf("%s", word);

            if (str[i] == ' ')
                printf(" ");

            j = 0; // reset for next word
        }
    }

    return 0;
}
