#include <stdio.h>
#include <stdlib.h>

void rearrangeEvenOdd(int arr[], int n) {
    int temp[n];
    int even[n], odd[n], e = 0, o = 0, i, j = 0, k = 0;

    // Sort the array (simple Bubble Sort here for clarity)
    for (i = 0; i < n-1; i++)
        for (j = 0; j < n-i-1; j++)
            if (arr[j] > arr[j+1]) {
                int t = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = t;
            }

    // Separate even and odd numbers
    for (i = 0; i < n; i++) {
        if (arr[i] % 2 == 0)
            even[e++] = arr[i];
        else
            odd[o++] = arr[i];
    }

    int flag = (arr % 2 == 0) ? 1 : 0; // 1 for even first, else odd first
    i = 0, j = 0, k = 0;

    // Fill original array in alternate fashion
    while (i < e && j < o) {
        if (flag) arr[k++] = even[i++];
        else arr[k++] = odd[j++];
        flag = !flag;
    }
    // In case of any left elements (if N is odd)
    while (i < e) arr[k++] = even[i++];
    while (j < o) arr[k++] = odd[j++];
}

int main() {
    int arr[] = {9, 8, 13, 2, 19, 14};
    int n = sizeof(arr) / sizeof(arr);
    rearrangeEvenOdd(arr, n);
    printf("Rearranged array: ");
    for (int i = 0; i < n; i++) printf("%d ", arr[i]);
    return 0;
}
