#include <stdio.h>
#include <string.h>

// Function to reverse characters from index l to r
void reverse(char str[], int l, int r) {
    while (l < r) {
        char temp = str[l];
        str[l] = str[r];
        str[r] = temp;
        l++;
        r--;
    }
}

int main() {
    char str[100];
    printf("Enter a sentence: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline if present
    str[strcspn(str, "\n")] = '\0';

    int start = 0;
    int len = strlen(str);

    for (int i = 0; i <= len; i++) {
        // If space or end of string, reverse the word
        if (str[i] == ' ' || str[i] == '\0') {
            reverse(str, start, i - 1);
            start = i + 1;
        }
    }

    printf("Output: %s\n", str);
    return 0;
}
